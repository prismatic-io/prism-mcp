{
  "name": "@prismatic-io/prism-mcp",
  "version": "1.1.0",
  "description": "MCP server that wraps Prismatic's Prism CLI tool",
  "keywords": ["prismatic"],
  "main": "dist/index.js",
  "type": "module",
  "homepage": "https://prismatic.io",
  "bugs": {
    "url": "https://github.com/prismatic-io/prism-mcp/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prismatic-io/prism-mcp.git"
  },
  "publishConfig": {
    "access": "public",
    "tag": "next",
    "registry": "https://registry.npmjs.org"
  },
  "files": ["dist/"],
  "license": "MIT",
  "bin": {
    "prism-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod 755 dist/index.js",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@prismatic-io/prism": "^7.5.6",
    "lodash-es": "^4.17.21",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.3",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.30"
  },
  "types": "./dist/index.d.ts"
}
